  <Target Name="AfterBuild">
    <Copy
      SourceFiles="$(TargetPath)"
      DestinationFolder="$(SolutionDir)"/>
    <!--
        We need to copy OpenRA.Mods.RA.pdb (not `.dll.pdb`).
        This is only necessary on Windows. Mono outputs a `.dll.mdb`,
          so we can just append `.mdb` directly.
    -->
    <Copy
      SourceFiles="$([System.IO.Path]::GetFileNameWithoutExtension($(TargetPath))).pdb"
      DestinationFolder="$(SolutionDir)"
      Condition="'$(OS)' == 'Windows_NT'" />
    <Copy
      SourceFiles="$(TargetPath).mdb"
      DestinationFolder="$(SolutionDir)"
      Condition="'$(OS)' == 'Unix'" />
  </Target>
